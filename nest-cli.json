{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/tp1-sistema-reservas/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/tp1-sistema-reservas/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/tp1-sistema-reservas",
  "projects": {
    "tp1-sistema-reservas": {
      "type": "application",
      "root": "apps/tp1-sistema-reservas",
      "entryFile": "main",
      "sourceRoot": "apps/tp1-sistema-reservas/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tp1-sistema-reservas/tsconfig.app.json"
      }
    },
    "mailer": {
      "type": "application",
      "root": "apps/mailer",
      "entryFile": "main",
      "sourceRoot": "apps/mailer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mailer/tsconfig.app.json"
      }
    }
  }
}